pta-lab3-Q5，

#include<stdio.h>
int main(){
    int sel(int size,char arr[]);
    int M,N,i,j;
    scanf("%d %d\n",&N,&M);
    char ch[N+1];
    for(i=0;i<M;i++){
        scanf("%s\n",&ch);
        printf("%d\n",sel(N,ch));
    }
    
}
int sel(int size,char arr[]){
    int k,root = 1;
    for(k=0;k<size;k++){
        switch(arr[k]){
            case 'n': root = 2*root;break;
            case 'y': root = 2*root - 1;break;
            default:root = 0;
        }
    }
    return root;
}

